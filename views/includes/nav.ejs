<header class="header-5 short-stor">
    <div class="container-fluid">
        <div class="row">
            <!-- logo start -->
            <div class="col-md-3 text-center">
                <div class="top-logo">
                    <a href="index.html"><img src="img/logo-2.gif" alt="" /></a>
                </div>
            </div>
            <!-- logo end -->
            <!-- mainmenu area start -->
            <div class="col-md-6 text-center">
                <div class="mainmenu">
                    <nav>
                        <ul>
                            <%if(isLoggedIn==true && user.role=='admin'){%>
                            <li class="expand <%= path === 'admin/add-product' ? 'active' : '' %>"><a href="/admin/add-product">Add Product</a></li>
                           <%}%>
                            <li class="expand  <%= path === '/' ? 'active' : '' %>"><a href="/">Home</a>
                                                                
                            </li>
                           
                            
                            
                            <li class="expand <%= path === '/shop' ? 'active' : '' %>"><a href="/shop">Shop</a>
                                <ul class="restrain sub-menu">
                                    <li><a href="/watches">Watches</a></li>
                                    <li><a href="/bags">Clutches</a></li>
