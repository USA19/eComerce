                                    <li><a href="/glasses">Glasses</a></li>
                                   
                                    
                                
                                </ul>									
                            </li>
                            <li class="expand <%= path === '/about' ? 'active' : '' %> "><a href="/about">About</a></li>
                            <li class="expand <%= path === '/contact' ? 'active' : '' %>"><a href="/contact">Contact</a></li>
                            <!-- <%if(!isLoggedIn){%>
                            <li class="expand  <%= path === '/login' ? 'active' : '' %>"><a href="/login"> Signup/login</a>
                             <%}%>                                    -->
                            </li>
                        
                        </ul>
                    </nav>
                </div>
                <!-- mobile menu start -->
                <div class="row">
                    <div class="col-sm-12 mobile-menu-area">
                        <div class="mobile-menu hidden-md hidden-lg" id="mob-menu">
                            <span class="mobile-menu-title">Menu</span>
                            <nav>
                                <ul>
                                    <li><a href="/">Home</a>
                                        
                                    </li>
                                    
                                            
                                            
                                    
                                   
                                        
                                            <li><a href="/shop">Shop</a>
                                                <ul>
                                                    
                                                    <li><a href="/watches">Watches</a></li>
													<li><a href="/bags">Clutches</a></li>
													<li><a href="/clutches">Bags</a></li>
													<li><a href="/glasses">Glasses</a></li>
                                                </ul>
                                            </li>
                                            
                                       
                                    
                                    
                                      													
                                    
                                    <li><a href="/about">About Us</a></li>
                                    <li><a href="/contact">Contact Us</a></li>
                                    <!-- <%if(!isLoggedIn){%>
                                    <li><a href="/login">Login/Signup</a> </li>
                                    <%}%> -->
                                </ul>
                            </nav>
                        </div>						
                    </div>
                </div>
                <!-- mobile menu end -->
            </div>
            <!-- mainmenu area end -->
            <!-- top details area start -->
            <div class="col-md-3 nopadding-left" style="margin-top:2.5% ;">
                <div class="top-detail">
                 
                    <!-- addcart top start -->
                    <div class="disflow" style="margin:0 10%">
                        <div class="circle-shopping expand">
                            <div class="shopping-carts text-right">
                                
                                
                                
                                <%if(cartItems!==''){%>
                                <div class="cart-toggler">
                                    <a href="/cart"><i class="icon-bag"></i></a>
                                    
                                    
                                        
                                    <a href="#"><span class="cart-quantity"><%=cartItems.length%></span></a>
                                   
                                </div>
                               
                                <div class="restrain small-cart-content">
                                    <%cartItems.forEach(p=>{%>
                                    <ul class="cart-list">
                                       
                                        <li>
                                            <a class="sm-cart-product" href="/shop/<%=p._id%>">
                                                <img src="<%=p.productId.imageUrl%>" alt="">
                                            </a>
                                            <div class="small-cart-detail">
                                                <a class="remove" href="/deleteCartItem/<%=p._id%>"><i class="fa fa-times-circle"></i></a>
                                                
                                                <a class="small-cart-name" href="/shop/<%=p._id%>"><%=p.productId.title%></a>
                                                <span class="quantitys"><strong><%=p.quantity%></strong>x<span><%=p.productId.price%></span></span>
                                            </div>
                                            
                                        </li>
                                       
                                    </ul>
                                    <%})%>
                                    <p class="total">Total: <span class="amount"><%=total%></span></p>
                                    <p class="buttons">
                                        <a href="/checkout" class="button">Checkout</a>
                                    </p>
                                   
                                
                                </div>
                                
                            </div>
                            <%}%>
                        </div>
                    </div>
                   
                    <!-- addcart top start -->
                    <!-- search divition start -->
